{
  "name": "root",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "dev:all": "turbo run dev --filter=!./examples/*",
    "dev:examples": "turbo run dev --filter=./examples/*",
    "lint": "turbo run lint",
    "lint:prettier": "prettier --cache --check --ignore-path .gitignore --ignore-path .prettierignore .",
    "prettier": "prettier --cache --write --list-different --ignore-path .gitignore --ignore-path .prettierignore .",
    "release": "turbo run build --filter=./packages/* && changeset publish && pnpm -r run postpublish",
    "test": "vitest",
    "types:check": "turbo run types:check",
    "version": "changeset version && pnpm install --lockfile-only"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@eslint/js": "^9.34.0",
    "bun": "^1.2.20",
    "concurrently": "^9.2.0",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "rimraf": "^6.0.1",
    "tsup": "8.5.0",
    "turbo": "2.5.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@9.14.4",
  "engines": {
    "node": ">= 18.17.0"
  }
}
