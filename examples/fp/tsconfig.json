{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "noEmit": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "jsx": "react-jsx"
  },
  "include": ["**/*", ".source/**/*"],
  "exclude": ["node_modules", "dist"]
}
